<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="footballer_form">
      <field name="name">my_module.footballer.form</field>
      <field name="model">my_module.footballer</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="age"/>
            <field name="description"/>
            <field  name="image"/>
            <field  name="footballer_number"/>
            <field  name="footballer_id"/>
        </tree>
      </field>
    </record>

       <record model="ir.ui.view" id="football_club_form">
      <field name="name">my_module.football_club.form</field>
      <field name="model">my_module.football_club</field>
      <field name="arch" type="xml">
        <tree>
          <field name="image"/>
          <field name="football_club"/>
          <field name="description"/>
            <field  name="fc_id"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_footballer">
      <field name="name">footballer window</field>
      <field name="res_model">my_module.footballer</field>
        <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

